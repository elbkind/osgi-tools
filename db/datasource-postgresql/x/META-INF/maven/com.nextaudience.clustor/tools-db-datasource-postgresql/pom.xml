	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                          <Embed-Dependency>
                                                      postgresql;scope=compile,
                                                      el-api;scope=compile,
                                                      javax.interceptor-api;scope=compile,
                                                      javax.inject;scope=compile,
                                                      javax.transaction-api;scope=compile,
                                                      cdi-api;scope=compile
                          </Embed-Dependency>
                       <Bundle-Activator>de.nextaudience.db.datasource.postgresql</Bundle-Activator>
				</instructions>
				</configuration>
			</plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-ipojo-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>ipojo-bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
